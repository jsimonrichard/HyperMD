{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2017",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "outDir": ".",
    "baseUrl": ".",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
